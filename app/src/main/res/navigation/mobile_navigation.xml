<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_player">

    <fragment
        android:id="@+id/navigation_source"
        android:name="com.zaf.exomusicplayer.ui.source.SourceFragment"
        android:label="@string/title_source"
        tools:layout="@layout/fragment_source" />

    <fragment
        android:id="@+id/navigation_player"
        android:name="com.zaf.exomusicplayer.ui.player.PlayerFragment"
        android:label="@string/title_player"
        tools:layout="@layout/fragment_player" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.zaf.exomusicplayer.ui.profile.ProfileFragment"
        android:label="@string/title_profile"
        tools:layout="@layout/fragment_profile" />
</navigation>
